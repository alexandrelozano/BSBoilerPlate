@page
@model BSBoilerPlate.Pages.ErrorModel
@using System.Globalization
@using Microsoft.Extensions.Localization
@using BSBoilerPlate.Services
@using BSBoilerPlate.Shared
@inject IStringLocalizer<SharedResources> _localizer

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>Error</title>
    <link href="~/css/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/app.css" rel="stylesheet" />
</head>

<body>
    <div class="main">
        <div class="content px-4">
            <h1 class="text-danger">@_localizer["Error."]</h1>
            <h2 class="text-danger">@_localizer["An error occurred while processing your request."]</h2>

            @if (Model.ShowRequestId)
            {
                <p>
                    <strong>Request ID:</strong> <code>@Model.RequestId</code>
                </p>
            }

            <h3>@_localizer["Development Mode"]</h3>
            <p>
                @_localizer["Swapping to the Development environment displays detailed information about the error that occurred."]
            </p>
            <p>
                <strong>@_localizer["The Development environment shouldn't be enabled for deployed applications."]</strong>
                @_localizer["It can result in displaying sensitive information from exceptions to end users."]
                @_localizer["For local debugging, enable the Development environment by setting the ASPNETCORE_ENVIRONMENT environment variable to Development"]
                @_localizer["and restarting the app."]
            </p>
        </div>
    </div>
</body>

</html>
